<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Magenest_Blog::blog" title="Blog MX by Magenest">
                        <resource id="Magenest_Blog::blog_post" title="All Posts" sortOrder="10" />
                        <resource id="Magenest_Blog::blog_category" title="Categories" sortOrder="20" />
                        <resource id="Magenest_Blog::blog_author" title="Authors" sortOrder="30" />
                        <resource id="Magenest_Blog::blog_settings" title="Settings" sortOrder="40" />
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
