                        <block name="author" class="Magenest\Blog\Block\Adminhtml\Post\Edit\Sidebar\Author"/>
                        <block name="image" class="Magenest\Blog\Block\Adminhtml\Post\Edit\Sidebar\Image"/>
                    </block>
                    <block name="tabs" class="Magenest\Blog\Block\Adminhtml\Post\Edit\Tabs"/>
                </block>
            </block>
        </referenceContainer>
