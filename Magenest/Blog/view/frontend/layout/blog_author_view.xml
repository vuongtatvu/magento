<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd" layout="2columns-right">
    <update handle="blog_default"/>
    <body>
        <referenceContainer name="content">
            <block name="blog.author.view" class="Magenest\Blog\Block\Author\View" template="author/view.phtml">
                <block class="Magenest\Blog\Block\Post\PostList" name="blog.post.list" template="post/list.phtml">
                    <container name="blog.post.list.additional"/>
                    <block class="Magenest\Blog\Block\Post\PostList\Toolbar" name="blog.post.list.toolbar" template="post/list/toolbar.phtml">
                        <block class="Magenest\Blog\Block\Html\Pager" name="pager"/>
                    </block>
                    <action method="setToolbarBlockName">
                        <argument name="name" xsi:type="string">blog.post.list.toolbar</argument>
                    </action>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
