<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Magenest\MapList\Block\Adminhtml\Category\Edit" name="maplist_category_edit"/>
        </referenceContainer>

        <referenceContainer name="left">
            <block class="Magenest\MapList\Block\Adminhtml\Category\Edit\Tabs" name="maplist_category_tabs">
                <block class="Magenest\MapList\Block\Adminhtml\Category\Edit\Tab\Setting" name="maplist_category_settings"/>
                <block class="Magenest\MapList\Block\Adminhtml\Category\Edit\Tab\AddLocation" name="maplist_category_add_location"/>

                <action method="addTab">
                    <argument name="name" xsi:type="string">setting</argument>
                    <argument name="block" xsi:type="string">maplist_category_settings</argument>
                </action>

                <action method="addTab">
                    <argument name="name" xsi:type="string">add_location</argument>
                    <argument name="block" xsi:type="string">maplist_category_add_location</argument>
                </action>
            </block>
        </referenceContainer>

        <referenceContainer name="js">
            <block class="Magenest\MapList\Block\Adminhtml\Map\Edit\Js" template="map/js.phtml"/>
        </referenceContainer>
    </body>
</page>