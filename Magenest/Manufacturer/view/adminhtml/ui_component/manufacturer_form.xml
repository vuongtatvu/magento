<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">manufacturer_form.manufacturer_listing_data_source</item>
            <item name="deps" xsi:type="string">manufacturer_form.manufacturer_listing_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Manufacturer Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">manufacturer_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>

        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">Magenest\Manufacturer\Block\Adminhtml\Manufacturer\Edit\BackButton
            </item>
            <item name="save" xsi:type="string">Magenest\Manufacturer\Block\Adminhtml\Manufacturer\Edit\SaveButton
            </item>
        </item>
    </argument>
    <dataSource name="manufacturer_listing_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Magenest\Manufacturer\Model\DataProvider</argument>
            <argument name="name" xsi:type="string">manufacturer_listing_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>

    </dataSource>
    <fieldset name="Manufacturer_details">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Manufacturer Details</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>

        <field name="entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Manufacturer ID</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">magenest_manufacturer</item>
                    <item name="dataScope" xsi:type="string">entity_id</item>
                    <item name="visible" xsi:type="boolean">false</item>
                </item>
            </argument>
        </field>

        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name Manufacturer</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">magenest_manufacturer</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-no-empty" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="enabled">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Config\Model\Config\Source\Yesno</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Enabled</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">magenest_manufacturer</item>
                    <item name="dataScope" xsi:type="string">enabled</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-no-empty" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="address_street">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Address Street</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">magenest_manufacturer</item>
                    <item name="dataScope" xsi:type="string">address_street</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-no-empty" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="address_city">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Address City</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">magenest_manufacturer</item>
                    <item name="dataScope" xsi:type="string">address_city</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-no-empty" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="address_country">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Directory\Model\Config\Source\Country</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Address Country</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="source" xsi:type="string">magenest_manufacturer</item>
                    <item name="dataScope" xsi:type="string">address_country</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-no-empty" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="contact_name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Contact Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">magenest_manufacturer</item>
                    <item name="dataScope" xsi:type="string">contact_name</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-no-empty" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="contact_phone">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Contact Phone</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">magenest_manufacturer</item>
                    <item name="dataScope" xsi:type="string">contact_phone</item>
                    <item name="validation" xsi:type="array">
                        <item name="validate-no-empty" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>